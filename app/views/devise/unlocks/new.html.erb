<div class="container">
  <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
  <fieldset>
    <legend>Resend unlock instructions</legend>
    <%= f.label :email %> <%= f.email_field :email, :autofocus => true %>
    <span class="help-block">If your account was locked and you haven't received an email to unlock it, you can resend it.</span>
    <div class="controls">
      <%= f.submit "Resend unlock instructions", :class => "btn btn-primary" %>
    </div>
  </fieldset>
  <% end %>

<%= render "devise/shared/links" %>
</div>
