<div class="container">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <fieldset>
    <legend>Reset your Hybrasyl account password</legend>
    <%= f.label :email %> 
    <%= f.email_field :email, :autofocus => true %>
    <span class="help-block">This will send an email to your registered email address with a link to change your password.</span>
    <div class="controls">
      <%= f.submit "Reset my password", :class => "btn btn-primary" %>
   </div>
  </fieldset>
  <% end %>

<%= render "devise/shared/links" %>
</div>
