<div class="container">
  <h2 class="text-center pageheader">Hybrasyl Account Management</h2>

  <p class="lead">
  Manage your account and characters here.
  </p>

  <h3>Characters Linked to <%= current_account.email %></h3>
  <% if !@characters.nil? %>
  <table class="table table-bordered">
    <thead>
      <th>Name</th>
      <th>Class</th>
      <th>Level</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @characters.each do |char| %>
              <tr>
                <td><%= char.name %></td>
                <td><%= Hybrasyl::Constants::Classes::REVERSEHASH[char.class_type] %></td>
                <td><%= char.level %></td>
                <td><a href="/account/character/<%= char.id %>/reset">Reset password</a></td>
              </tr>
      <% end %>

    </tbody>
  </table>

  <% else %>
    No characters are currently linked to your account.
  <% end %>
<hr>
  <h4>Link a New Character</h4>
  <%= form_tag("/account/link", method: "post") do %>
    <%= label_tag(:player, "Character Name") %>
    <%= text_field_tag(:player) %>
    <%= label_tag(:password, "Character Password") %>
    <%= password_field_tag(:password) %><br/>
    <%= submit_tag("Link") %>
  <% end %>

</div>
